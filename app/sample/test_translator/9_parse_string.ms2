func wrap(s: String) -> String {
    return "'" + s + "'";
}

func intPow(x: Int, pow: Int) -> Int {
    var n = 1;

    var steps = 0;
    while steps < pow {
        n = n * x;
        steps = steps + 1;
    }
    return n;
}

func reverse(s: String) -> String {
    var acc = "";
    for char in s {
        acc = char + acc;
    }
    return acc;
}

func parseDigit(ch: String) -> Int {
    switch (ch) {
        case "0" {
            return 0;
        }
        case "1" {
            return 1;
        }
        case "2" {
            return 2;
        }
        case "3" {
            return 3;
        }
        case "4" {
            return 4;
        }
        case "5" {
            return 5;
        }
        case "6" {
            return 6;
        }
        case "7" {
            return 7;
        }
        case "8" {
            return 8;
        }
        case "9" {
            return 9;
        }
        default {
            throw("ERROR: " + wrap(ch) + " is not a digit!");
        }
    }
}


// parse positive integers
func parseInt(pattern: String) -> Int {
    var n = 0;
    var power = 0;
    for char in reverse(pattern) {
        n = n + parseDigit(char) * intPow(10, power);
        power = power + 1;
    }
    return n;
}

func main() {
    for i in range(0, 3, 1) {
        print("please type a number..");
        let nums = input();
        let n = parseInt(nums);
        print("Your number:", n);
    }
}
